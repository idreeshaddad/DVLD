@model MB.T.DVLD.Web.Models.Car.CarVM

@{
    ViewData["Title"] = "Car Details";
}

<h1>Car Details</h1>

<div class="row">

    <div class="col-sm-6">
        <dl class="row">
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Manu)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Manu)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Model)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Model)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Color)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Color)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.LicensePlate)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.LicensePlate)
            </dd>
        </dl>
    </div>
    <div class="col-sm-6">
        <h4>Car Owners:</h4>

        <table class="table">
            <thead>
                <tr>
                    <th>Driver Name</th>
                    <th>License Number</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var driver in Model.Drivers)
                {
                    <tr>
                        <td>@driver.FullName</td>
                        <td>@driver.LicenseNumber</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

<div class="form-group">
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    <a class="btn btn-primary ml-1" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
</div>

