@model IEnumerable<MB.T.DVLD.Web.Models.Insurances.InsuranceVM>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Index";
}

<h1>Insurances</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExpiryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InsuranceType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var insurance in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => insurance.ExpiryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => insurance.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => insurance.InsuranceType)
                </td>
                <td>
                    
                    <a asp-action="Details" asp-route-id="@insurance.Id">Details</a>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <span>|</span>
                        <a asp-action="Edit" asp-route-id="@insurance.Id">Edit</a>
                        <span>|</span>
                        <button type="button" class="btn btn-link p-0 mb-1" data-toggle="modal" data-target="#deleteModal_@insurance.Id">
                            Delete
                        </button>
                    }

                    <!-- Driver Modal -->
                    <div class="modal fade" id="deleteModal_@insurance.Id" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title" id="deleteModalLabel_@insurance.Id">Delete Insurance?</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">

                                    <h4 class="text-danger">Are you sure you want to delete ?</h4>
                                    <div>
                                        <dl class="row">
                                            <dt class="col-sm-6 my-2">Company Name :</dt>
                                            <dd class="col-sm-6 my-2 text-danger">@insurance.CompanyName</dd>
                                            <dt class="col-sm-6 my-2">Expiry Date :</dt>
                                            <dd class="col-sm-6 my-2 text-danger">@insurance.ExpiryDate</dd>
                                            <dt class="col-sm-6 my-2">Insurance Type :</dt>
                                            <dd class="col-sm-6 my-2 text-danger">@insurance.InsuranceType</dd>
                                        </dl>
                                    </div>

                                </div>
                                <div class="modal-footer">
                                    <form asp-action="Delete">
                                        <input type="hidden" value="@insurance.Id" name="id" />
                                        <input type="submit" value="Delete" class="btn btn-danger" />
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
