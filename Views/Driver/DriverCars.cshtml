@model IEnumerable<DVLD.Models.Car.CarViewModel>

@{
    ViewData["Title"] = "Driver Cars";
}

<h1>
    @if (@Model.Count() > 0)
    {
        @Model.First().DriverFullName
        <span>Cars</span>
    }
    else
    {
        <span>No Cars for this Driver</span>
    }
</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Manu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Manu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
            </tr>
        }
    </tbody>
</table>
